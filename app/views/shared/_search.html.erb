<%= form_tag(self.controller_path, action: :index,  method: "get") do %>
    <%= text_field_tag :search, params[:search], id: "main-search-query", placeholder: "Search #{self.controller_name.humanize}", size: '40' %>
    <%= submit_tag("Reset", type: "reset" ) %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
