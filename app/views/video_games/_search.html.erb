<%= form_tag(controller_path, action: :index,  method: "get") do %>
    <%= text_field_tag :search, params[:search], class: "main-search-field", placeholder: "Search #{controller_name.humanize}", size: '40' %>
    <%= submit_tag("Reset", type: "reset", class: "search-reset-btn" ) %>
    <%= submit_tag "Search", :name => nil, class: "search-submit-btn" %>
<% end %>
