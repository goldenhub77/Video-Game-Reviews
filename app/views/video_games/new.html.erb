<h2>Add New Game</h2>

<%= form_for(@new_video_game, url: video_games_path) do |f| %>
  <%= video_game_error_messages! %>

  <div class="field">
    <%= f.label :title, "Title"%><br />
    <%= f.text_field :title, autofocus: true, required: true, size: '50' %>
  </div>

  <div class="field">
    <%= f.label :developer, "Developer"%><br />
    <%= f.text_field :developer, required: true, size: '50' %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, size: '60x7'%>
  </div>

  <div class="form-group">
      <%= f.collection_check_boxes(:platforms, Platform.all, :id, :name, include_hidden: false) do |b| %>
          <%= b.label { b.check_box + b.text } %>
      <% end %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.collection_select :genre, Genre.all, :id, :name, { prompt: "Select a genre" } %>
  </div>

  <div class="field">
    <%= f.label :release_date, "Release Date" %>
    <%= f.date_field :release_date %>
  </div>

  <div class="field">
    <%= f.label :rating, '(0 worst - 5 best) Rating: ' %>
    <%= f.range_field :rating, in: 0..5, step: 1, width: '30' %>
  </div>

  <div class="actions">
    <%= f.submit "Create Game" %>
  </div>
<% end %>
